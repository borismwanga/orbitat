<<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Edit a spaceship</h3>
        <%= simple_form_for [@user, @spaceship] do |f| %>
            <%= f.input :name, placeholder: 'Name of the spaceship' %>
            <%= f.label  (capture do %>
                <%= "Category"%>
            <% end) %>
            <%= f.select :category, [["A"], ["B"], ["C"], ["D"], ["E"]] %>
            <%= f.input :location, placeholder: 'Location' %>
            <%= f.input :capacity, placeholder: 'capacity' %>
            <%= f.input :price, placeholder: 'Price' %>
            <%= f.input :photo, as: :file %>
            <%= f.input :description, as: :text, :input_html => { class: 'test', :cols => 5, :rows => 10 } %>
            <%= f.label  (capture do %>
                <%= "Speed of light"%>
            <% end) %>
            <%= f.select :speed_of_light,  [['Yes', true], ['No', false]]%>
            <%= f.input :fuel_drive, placeholder: 'Fuel Drive' %>
            <%= f.input :brand, placeholder: 'Brand' %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
